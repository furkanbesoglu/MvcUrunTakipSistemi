@model MvcUrünTakipSistemi.Models.Entity.Musteriler
@{
    ViewBag.Title = "MusteriEkle";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<br />
<form class="form-group" method="post">
    <div style="margin-top:15px;">
        <label>Müşteri Adı</label>
        @Html.TextBoxFor(m => m.MusteriAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MusteriAD, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:15px;">
        <label>Müşteri Soyadı</label>
        @Html.TextBoxFor(m => m.MusteriSoyad, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MusteriSoyad, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:15px;">
        <label>Müşteri Şehir</label>
        @Html.TextBoxFor(m => m.Sehir, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Sehir, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:15px;">
        <label>Müşteri Bakiye</label>
        @Html.TextBoxFor(m => m.Bakiye, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px;">
        <button class="btn btn-warning">Müşteri Ekle</button>
    </div>
</form>

