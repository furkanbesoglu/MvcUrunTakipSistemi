@using MvcUrünTakipSistemi.Models.Entity;
@model List<Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
{
    <p>
        Ürün Adı: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<br />
<table class="table table-bordered"> 
    <tr>
        <th>Ürün ID</th>
        <th>Ürün Adı</th>
        <th>Marka</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fiyat</th>
        <th>Kategori Adı</th>
        <th>Ürün Sil</th>
        <th>Ürün Güncelle</th>
    </tr>
    @foreach (var urn in Model)
    {
        <tr>
            <th>@urn.UrunID</th>
            <td>@urn.UrunAD</td>
            <td>@urn.Marka</td>
            <td>@urn.Stok</td>
            <td>@urn.Stok</td>
            <td>@urn.AlisFiyat</td>
            <td>@urn.SatisFiyat</td>
            <td>@urn.Kategoriler.KategoriAD</td>
            <td><a href="/Urun/UrunSil/@urn.UrunID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@urn.UrunID" class="btn btn-success">Güncelle</a></td>
        </tr>
        }
</table>
<a href="/Urun/UrunEkle/" class="btn btn-primary">Yeni Ürün Ekle</a>


